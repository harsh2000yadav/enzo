<!DOCTYPE html>
<html>
  <%- include('../head') -%>
  <body ng-app="">
    <div class="container-fluid">
      <a href="/" class="float-left">
        <h2>
  	    	
  	    	Enzo
  	    </h2>
  </a>
    </div>
    <br>
    <div class="container">
    <input type="text" class="form-control" onkeyup="updateList(this.value);" placeholder="Search here..." />
    <br>
    <ul class="list-group">
      <li class="list-group-item list-group-item-primary"  style="background-color: #FFC312">Total Users</li>
           <li class="list-group-item">
            Total <b><%= list.length %></b> user(s) have signed up.
         </li>

   </ul>
    <ul class="list-group">
      <li class="list-group-item list-group-item-primary" style="background-color: #FFC312" >Results</li>
      <div id="user-list">
      <% for(var i=0;i<list.length;i++) { %>
         <li class="list-group-item">
            <img src="<%= list[i].profile_pic %>" class="logo">
            <b><a href="/u/<%= list[i].username %>" id="list-username"><%= list[i].username %></a></b>
         </li>
      <% } %>
    </div>
   </ul>

    <div id="notify_message" class=" notify_message-success">
    	<center>Search for people on Enzo...</center>
    </div>
    <%- include('../tabs') -%>
    <%- include('../footer') -%>
  </body>
   <script type="text/javascript" src="/javascripts/dom.js"></script>
   <script type="text/javascript" src="/javascripts/search.js"></script>

</html>
